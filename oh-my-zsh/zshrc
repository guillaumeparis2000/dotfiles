# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Antigen initialisation
source /usr/local/share/antigen/antigen.zsh

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

antigen bundle ~/workspace/dotfiles/oh-my-zsh/themes mytheme.zsh-theme --no-local-clone

# Activate bundles from oh-my-zsh
antigen bundle git
antigen bundle rsync
antigen bundle docker
antigen bundle docker-compose
antigen bundle ssh-agent
antigen bundle pip
antigen bundle nvm
antigen bundle zsh-nvm
antigen bundle yarn
antigen bundle gcloud

# Activate bundles from github
export NVM_DIR="$HOME/.nvm"
export NVM_LAZY_LOAD=true
export NVM_NO_USE=true
antigen bundle lukechilds/zsh-nvm

# Apply changes
antigen apply

# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
HIST_STAMPS="dd.mm.yyyy"

# don't put duplicate lines in the history. See bash(1) for more options
# don't overwrite GNU Midnight Commander's setting of `ignorespace'.
export HISTCONTROL=$HISTCONTROL${HISTCONTROL+,}ignoredups
# ... or force ignoredups and ignorespace
export HISTCONTROL=ignoreboth


# User configuration

export PATH=$HOME/bin:/usr/local/bin:/home/guillaume/npm-global/bin:/usr/local/opt/go/libexec/bin:/Users/gpa/Library/Python/3.7/bin:$PATH

# You may need to manually set your language environment
export LANG=fr_FR.UTF-8

# Load alias file
if [ -f ~/.aliases ]; then
    . ~/.aliases
fi

# tell brew do not call home
export HOMEBREW_NO_ANALYTICS=1

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

export PATH="/usr/local/sbin:$PATH"

source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc'
source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc'
